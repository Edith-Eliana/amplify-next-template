                            <input type="text" id="report-search-dni" placeholder="Ingrese DNI del estudiante..." class="flex-1 p-3 border-2 border-slate-300 rounded-lg focus:border-amber-500 outline-none text-lg">
                            <button onclick="searchForReport()" class="bg-slate-900 text-white px-6 py-3 rounded-lg font-bold hover:bg-slate-800 shadow">
                                <i class="fas fa-search text-amber-400"></i> Buscar
                            </button>
                        </div>
                        <div id="report-preview" class="mt-8 hidden animate-fade-in-up">
                            <div class="inline-block p-6 border rounded-lg bg-slate-50 text-left shadow-md border-slate-200">
                                <div class="flex items-center mb-4">
                                    <div class="w-12 h-12 bg-white border border-slate-200 rounded-full flex items-center justify-center text-slate-700 mr-4 shadow-sm">
                                        <i class="fas fa-user-graduate fa-lg"></i>
                                    </div>
                                    <div>
                                        <h4 class="font-bold text-lg text-slate-800" id="rep-name">Nombre Alumno</h4>
                                        <p class="text-slate-500" id="rep-grade">Grado</p>
                                    </div>
                                </div>
                                <button onclick="generateReportCard()" class="w-full bg-red-700 text-white py-2 rounded font-bold hover:bg-red-800 shadow">
                                    <i class="fas fa-file-pdf mr-2"></i> Generar Libreta de Notas
                                </button>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Calendar Module -->
                <section id="calendar" class="page hidden">
                    <div class="bg-white rounded-xl shadow-sm p-6 border border-slate-200">
                        <div class="flex justify-between items-center mb-6">
                            <div class="flex items-center gap-4">
                                <button onclick="changeMonth(-1)" class="p-2 hover:bg-slate-100 rounded-full"><i class="fas fa-chevron-left text-slate-600"></i></button>
                                <h2 id="cal-month-year" class="text-2xl font-bold text-slate-800 capitalize"></h2>
                                <button onclick="changeMonth(1)" class="p-2 hover:bg-slate-100 rounded-full"><i class="fas fa-chevron-right text-slate-600"></i></button>
                            </div>
                            <button onclick="openModal('add-event-modal')" class="bg-amber-600 text-white px-4 py-2 rounded hover:bg-amber-700 shadow font-bold">
                                <i class="fas fa-plus"></i> Nuevo Evento
                            </button>
                        </div>
                        <div class="grid grid-cols-7 gap-px bg-slate-200 border border-slate-200 rounded-lg overflow-hidden">
                            <!-- Headers -->
                            <div class="bg-slate-100 p-2 text-center font-bold text-red-600">Dom</div>
                            <div class="bg-white p-2 text-center font-bold text-slate-700">Lun</div>
                            <div class="bg-white p-2 text-center font-bold text-slate-700">Mar</div>
                            <div class="bg-white p-2 text-center font-bold text-slate-700">Mié</div>
                            <div class="bg-white p-2 text-center font-bold text-slate-700">Jue</div>
