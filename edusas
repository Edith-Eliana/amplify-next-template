    <!-- Missing Toast Container Added -->
    <div id="save-toast"></div>

<script>
// ===== MEGA SYSTEM CORE (Data Manager) =====
const DB_VERSION = '3.0';
const STORAGE_KEY = 'SIGE_KERNEL_DATA';

// Default Data with Pre-filled Courses for Demo
const defaultData = {
    students: [],
    teachers: [
        { id: 'T01', name: 'Pedro Castillo', specialty: 'Matemática' },
        { id: 'T02', name: 'Julia Ramos', specialty: 'Comunicación' },
        { id: 'T03', name: 'Albert Einstein', specialty: 'Ciencias' }
    ],
    // SEEDING COURSES SO SELECTS WORK IMMEDIATELY
    courses: [
        { code: 'MAT-1', name: 'Matemática', gradeId: 'G1', teacherId: 'T01', hours: 6 },
        { code: 'COM-1', name: 'Comunicación', gradeId: 'G1', teacherId: 'T02', hours: 5 },
        { code: 'CYT-1', name: 'Ciencia y Tecnología', gradeId: 'G1', teacherId: 'T03', hours: 4 },
        { code: 'MAT-2', name: 'Matemática', gradeId: 'G2', teacherId: 'T01', hours: 6 },
        { code: 'COM-2', name: 'Comunicación', gradeId: 'G2', teacherId: 'T02', hours: 5 },
        { code: 'MAT-5', name: 'Matemática', gradeId: 'G5', teacherId: 'T01', hours: 6 }
    ],
    gradesRecords: {},
    attendance: [],
    events: [
        { title: 'Inicio Año Escolar', date: '2025-03-10', type: 'bg-blue-100 text-blue-800 border-blue-200' }
    ]
};

const gradesList = [
    { id: 'G1', name: '1° Secundaria' },
    { id: 'G2', name: '2° Secundaria' },
    { id: 'G3', name: '3° Secundaria' },
    { id: 'G4', name: '4° Secundaria' },
    { id: 'G5', name: '5° Secundaria' }
];

document.addEventListener('DOMContentLoaded', () => {
    let db = JSON.parse(localStorage.getItem(STORAGE_KEY)) || defaultData;

    function getStudentGrade(id) { return gradesList.find(g => g.id === id); }
    function getTeacher(id) { return db.teachers.find(t => t.id === id); }

    function updateDashboard() {
        document.getElementById('dash-total-students').innerText = db.students.length;
        document.getElementById('dash-total-teachers').innerText = db.teachers.length;
        document.getElementById('dash-total-courses').innerText = db.courses.length;
        document.getElementById('dash-total-events').innerText = db.events.length;
        
        if(window.perfChart) window.perfChart.destroy();
        const ctx = document.getElementById('performanceChart').getContext('2d');
        window.perfChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: gradesList.map(g => g.name),
                datasets: [{
                    label: 'Promedio General',
                    data: [14, 15, 13, 16, 15], 
                    backgroundColor: '#0f172a',
                    borderRadius: 4
                }]
            },
            options: { plugins: { legend: { display: false } }, scales: { y: { beginAtZero: true, max: 20 } } }
        });
        
        if(window.distChart) window.distChart.destroy();
        const ctx2 = document.getElementById('distributionChart').getContext('2d');
        const counts = gradesList.map(g => db.students.filter(s => s.gradeId === g.id).length);
        window.distChart = new Chart(ctx2, {
            type: 'doughnut',
            data: {
                labels: gradesList.map(g => g.name),
                datasets: [{
                    data: counts,
                    backgroundColor: ['#0f172a', '#334155', '#475569', '#d97706', '#f59e0b']
                }]
            }
        });
    }

    function saveDB() {
        localStorage.setItem(STORAGE_KEY, JSON.stringify(db));
        updateDashboard();
    }

    window.openModal = (id) => document.getElementById(id).classList.remove('hidden');
    window.closeModal = (id) => document.getElementById(id).classList.add('hidden');
    
    // Improved showToast to handle innerHTML and icon
    window.showToast = (msg) => {
        const t = document.getElementById('save-toast');
        if (t) {
            t.innerHTML = `<i class="fas fa-check-circle mr-2 text-lg"></i> ${msg}`; 
            t.classList.add('show');
            setTimeout(() => t.classList.remove('show'), 3000);
        }
    };

    window.calcRow = function(input) {
        const row = input.closest('tr');
        const inputs = row.querySelectorAll('.grade-inp');
        let sum = 0;
        inputs.forEach(inp => sum += parseInt(inp.value || 0));
        const avg = Math.round(sum / 4);
        const finalCell = row.querySelector('.final-cell');
        finalCell.innerText = avg;
        finalCell.className = `p-3 text-center bg-gray-50 final-cell ${avg < 11 ? 'nota-desaprobatoria' : 'nota-aprobatoria'}`;
    };

    window.saveAllGrades = function() {
        const rows = document.querySelectorAll('#grades-table-body tr');
        let count = 0;
        rows.forEach(row => {
            const sid = row.dataset.sid;
            const cid = row.dataset.cid;
            if(!sid) return; 
            
            const inputs = row.querySelectorAll('.grade-inp');
            const gradesArr = Array.from(inputs).map(inp => parseInt(inp.value || 0));
            const final = parseInt(row.querySelector('.final-cell').innerText);
            
            db.gradesRecords[`${sid}_${cid}`] = { grades: gradesArr, final: final };
            count++;
        });
        saveDB();
        showToast(`${count} registros actualizados`);
    };

    window.saveAttendance = function() {
        const gid = document.getElementById('att-grade-select').value;
        const date = document.getElementById('att-date').value;
        const rows = document.querySelectorAll('#att-table-body tr');
        
        const records = {};
        rows.forEach(row => {
            const sid = row.dataset.sid;
            const val = row.querySelector(`input[name="att_${sid}"]:checked`).value;
            records[sid] = val;
        });

        const idx = db.attendance.findIndex(a => a.date === date && a.gradeId === gid);
        if(idx >= 0) db.attendance[idx].records = records;
        else db.attendance.push({ date, gradeId: gid, records });

        saveDB();
        showToast('Asistencia guardada');
    };

    window.searchForReport = function() {
        const dni = document.getElementById('report-search-dni').value;
        const student = db.students.find(s => s.id === dni);
        const preview = document.getElementById('report-preview');
        
        if(student) {
            preview.classList.remove('hidden');
            document.getElementById('rep-name').innerText = student.name;
            document.getElementById('rep-grade').innerText = getStudentGrade(student.gradeId).name;
            window.currentReportStudent = student; 
        } else {
            preview.classList.add('hidden');
            alert('Estudiante no encontrado');
        }
    };

    window.generateReportCard = function() {
        const s = window.currentReportStudent;
        const coursesList = db.courses.filter(c => c.gradeId === s.gradeId);
        
        document.getElementById('rep-card-name').innerText = s.name;
        document.getElementById('rep-card-dni').innerText = s.id;
        document.getElementById('rep-card-grade').innerText = getStudentGrade(s.gradeId).name;
        document.getElementById('print-date').innerText = new Date().toLocaleDateString();

        const tbody = document.getElementById('rep-card-body');
        tbody.innerHTML = '';

        if(coursesList.length === 0) {
            tbody.innerHTML = '<tr><td colspan="7" class="p-4 text-center border border-black">No hay cursos asignados a este grado.</td></tr>';
        } else {
            coursesList.forEach(c => {
                const key = `${s.id}_${c.code}`;
                const r = db.gradesRecords[key] || { grades: ['-','-','-','-'], final: '-' };
                const obs = (typeof r.final === 'number' && r.final < 11) ? 'RECUPERACIÓN' : 'APROBADO';
                const obsClass = obs === 'RECUPERACIÓN' ? 'font-bold' : '';

                tbody.innerHTML += `
                    <tr>
                        <td class="border border-black p-2">${c.name}</td>
                        <td class="border border-black p-1 text-center">${r.grades[0]}</td>
                        <td class="border border-black p-1 text-center">${r.grades[1]}</td>
                        <td class="border border-black p-1 text-center">${r.grades[2]}</td>
                        <td class="border border-black p-1 text-center">${r.grades[3]}</td>
                        <td class="border border-black p-2 text-center font-bold bg-gray-100">${r.final}</td>
                        <td class="border border-black p-2 text-center text-xs ${obsClass}">${typeof r.final === 'number' ? obs : '-'}</td>
                    </tr>
                `;
            });
        }
        
        openModal('official-report-modal');
    };

    let currentCalDate = new Date();
    window.renderCalendar = function() {
        const m = currentCalDate.getMonth();
        const y = currentCalDate.getFullYear();
        const firstDay = new Date(y, m, 1).getDay();
        const daysInMonth = new Date(y, m + 1, 0).getDate();
        
        const months = ["Enero","Febrero","Marzo","Abril","Mayo","Junio","Julio","Agosto","Septiembre","Octubre","Noviembre","Diciembre"];
        document.getElementById('cal-month-year').innerText = `${months[m]} ${y}`;
        
        const container = document.getElementById('cal-days');
        container.innerHTML = '';
        
        for(let i=0; i<firstDay; i++) container.innerHTML += '<div class="h-24 bg-white border-r border-b border-slate-200"></div>';
        
        for(let i=1; i<=daysInMonth; i++) {
            const dateStr = `${y}-${String(m+1).padStart(2,'0')}-${String(i).padStart(2,'0')}`;
            const evt = db.events.find(e => e.date === dateStr);
            let content = `<span class="font-bold text-slate-500 p-1">${i}</span>`;
            
            if(evt) {
                content += `<div class="mx-1 mt-1 p-1 rounded text-xs font-semibold truncate border ${evt.type}">${evt.title}</div>`;
            }
            
            container.innerHTML += `<div class="h-24 bg-white border-r border-b border-slate-200 hover:bg-slate-50 transition cursor-pointer">${content}</div>`;
        }
    };
    window.changeMonth = function(delta) {
        currentCalDate.setMonth(currentCalDate.getMonth() + delta);
        renderCalendar();
    };

    document.getElementById('login-form').addEventListener('submit', (e) => {
        e.preventDefault();
        const u = document.getElementById('username').value;
        const p = document.getElementById('password').value;
        if(u === 'admin' && p === 'admin') {
            document.getElementById('login-screen').classList.add('hidden');
            document.getElementById('app-container').classList.remove('hidden');
            initApp();
        } else {
            document.getElementById('login-error').classList.remove('hidden');
        }
    });

    document.querySelectorAll('.nav-link').forEach(link => {
        link.addEventListener('click', (e) => {
            e.preventDefault();
            const target = link.getAttribute('href').substring(1);
            document.querySelectorAll('.page').forEach(p => p.classList.add('hidden'));
            document.getElementById(target).classList.remove('hidden');
            document.getElementById('page-title').innerText = link.innerText;
            document.querySelectorAll('.nav-link').forEach(l => l.classList.remove('nav-active'));
            link.classList.add('nav-active');
            if(window.innerWidth < 1024) document.getElementById('sidebar').classList.add('sidebar-closed');
        });
    });

    document.getElementById('menu-button').addEventListener('click', () => {
        document.getElementById('sidebar').classList.toggle('sidebar-closed');
    });

    document.getElementById('logout-btn').addEventListener('click', () => location.reload());

    function initApp() {
        renderStudents();
        renderTeachers();
        renderCourses();
        populateSelects();
        renderCalendar();
        updateDashboard();
        document.querySelector('a[href="#dashboard"]').click();
    }

    function renderStudents() {
        const tbody = document.getElementById('students-table-body');
        const filter = document.getElementById('student-search').value.toLowerCase();
        
        tbody.innerHTML = '';
        const list = db.students.filter(s => s.name.toLowerCase().includes(filter) || s.id.includes(filter));
        
        if(list.length === 0) {
            document.getElementById('no-students-msg').classList.remove('hidden');
            return;
        }
        document.getElementById('no-students-msg').classList.add('hidden');

        list.forEach(s => {
            const grade = getStudentGrade(s.gradeId);
            tbody.innerHTML += `
                <tr class="hover:bg-slate-50 border-b border-slate-100 transition">
                    <td class="p-4 font-mono text-slate-600">${s.id}</td>
                    <td class="p-4 font-bold text-slate-800">${s.name}</td>
                    <td class="p-4 text-center"><span class="bg-slate-100 px-2 py-1 rounded text-xs border border-slate-200">${grade.name}</span></td>
                    <td class="p-4 text-center text-sm text-slate-500">${s.date}</td>
                    <td class="p-4 text-center"><span class="bg-emerald-100 text-emerald-700 px-2 py-1 rounded-full text-xs font-bold border border-emerald-200">Matriculado</span></td>
                    <td class="p-4 text-center">
                        <button class="text-slate-400 hover:text-amber-600 transition"><i class="fas fa-edit"></i></button>
                    </td>
                </tr>
            `;
        });
    }
    
    document.getElementById('student-search').addEventListener('input', renderStudents);
    
    document.getElementById('form-student').addEventListener('submit', (e) => {
        e.preventDefault();
        const dni = document.getElementById('new-stu-dni').value;
        if(db.students.find(s => s.id === dni)) { alert('¡Error! DNI ya registrado.'); return; }
        
        db.students.push({
            id: dni,
            name: document.getElementById('new-stu-name').value.toUpperCase(),
            gradeId: document.getElementById('new-stu-grade').value,
            date: document.getElementById('new-stu-date').value,
            status: 1
        });
        saveDB();
        renderStudents();
        closeModal('add-student-modal');
        showToast('Estudiante matriculado con éxito');
        e.target.reset();
    });

    function renderTeachers() {
        const grid = document.getElementById('teachers-grid');
        grid.innerHTML = '';
        db.teachers.forEach(t => {
            grid.innerHTML += `
                <div class="bg-white border border-slate-200 rounded-lg p-4 flex items-center shadow-sm hover:shadow-md transition">
                    <div class="h-12 w-12 rounded-full bg-slate-100 text-slate-600 flex items-center justify-center text-xl mr-4 border border-slate-200">
                        <i class="fas fa-user-tie"></i>
                    </div>
                    <div>
                        <h4 class="font-bold text-slate-800">${t.name}</h4>
                        <p class="text-sm text-amber-600 font-medium">${t.specialty}</p>
                    </div>
                </div>
            `;
        });
    }
    document.getElementById('form-teacher').addEventListener('submit', (e) => {
        e.preventDefault();
        db.teachers.push({
            id: 'T' + Date.now(),
            name: document.getElementById('new-tea-name').value,
            specialty: document.getElementById('new-tea-spec').value
        });
        saveDB();
        renderTeachers();
        populateSelects();
        closeModal('add-teacher-modal');
        showToast('Docente registrado');
        e.target.reset();
    });

    function renderCourses() {
        const tbody = document.getElementById('courses-table-body');
        const filterGrade = document.getElementById('course-filter-grade').value;
        
        tbody.innerHTML = '';
        let list = db.courses;
        if(filterGrade !== 'all') list = list.filter(c => c.gradeId === filterGrade);

        list.forEach(c => {
            const grade = getStudentGrade(c.gradeId);
            const teacher = getTeacher(c.teacherId) || { name: 'Sin asignar' };
            tbody.innerHTML += `
                <tr class="hover:bg-slate-50 border-b border-slate-100">
                    <td class="p-3"><span class="text-xs font-bold bg-slate-200 px-2 py-1 rounded text-slate-700">${grade.name}</span></td>
                    <td class="p-3 font-mono text-xs text-slate-500">${c.code}</td>
                    <td class="p-3 font-medium text-slate-800">${c.name}</td>
                    <td class="p-3 text-sm text-slate-600"><i class="fas fa-chalkboard-teacher mr-1 text-slate-400"></i> ${teacher.name}</td>
                    <td class="p-3 text-center text-sm font-bold text-slate-700">${c.hours} hrs</td>
                </tr>
            `;
        });
    }
    document.getElementById('course-filter-grade').addEventListener('change', renderCourses);
    document.getElementById('form-course').addEventListener('submit', (e) => {
        e.preventDefault();
        db.courses.push({
            code: document.getElementById('new-cour-code').value.toUpperCase(),
            name: document.getElementById('new-cour-name').value,
            gradeId: document.getElementById('new-cour-grade').value,
            teacherId: document.getElementById('new-cour-teacher').value,
            hours: document.getElementById('new-cour-hours').value
        });
        saveDB();
        renderCourses();
        closeModal('add-course-modal');
        showToast('Área curricular creada');
        e.target.reset();
    });

    const gradeGradeSelect = document.getElementById('grade-select-grade');
    const gradeCourseSelect = document.getElementById('grade-select-course');
    
    // CORRECCIÓN LOGICA SELECT
    gradeGradeSelect.addEventListener('change', () => {
        const gid = gradeGradeSelect.value;
        gradeCourseSelect.innerHTML = '<option value="">-- Seleccione Área --</option>';
        
        if (!gid) {
            gradeCourseSelect.disabled = true;
            gradeCourseSelect.innerHTML = '<option>-- Primero seleccione grado --</option>';
            return;
        }

        const filteredCourses = db.courses.filter(c => c.gradeId === gid);
        if (filteredCourses.length > 0) {
            gradeCourseSelect.disabled = false;
            filteredCourses.forEach(c => {
                gradeCourseSelect.innerHTML += `<option value="${c.code}">${c.name}</option>`;
            });
        } else {
            gradeCourseSelect.disabled = true;
            gradeCourseSelect.innerHTML = '<option>Sin cursos registrados</option>';
        }
    });

    document.getElementById('load-grades-btn').addEventListener('click', () => {
        const gid = gradeGradeSelect.value;
        const cid = gradeCourseSelect.value;
        if(!gid || !cid) { alert('Seleccione Grado y Curso'); return; }

        const container = document.getElementById('grades-container');
        const placeholder = document.getElementById('grades-placeholder');
        const tbody = document.getElementById('grades-table-body');
        
        container.classList.remove('hidden');
        placeholder.classList.add('hidden');
        tbody.innerHTML = '';

        const students = db.students.filter(s => s.gradeId === gid);
        if(students.length === 0) { tbody.innerHTML = '<tr><td colspan="7" class="p-4 text-center">No hay alumnos.</td></tr>'; return; }

        students.forEach((s, idx) => {
            const key = `${s.id}_${cid}`;
            const record = db.gradesRecords[key] || { grades: [0,0,0,0], final: 0 };
            const finalClass = record.final < 11 ? 'nota-desaprobatoria' : 'nota-aprobatoria';
            
            tbody.innerHTML += `
                <tr class="border-b hover:bg-slate-50 group" data-sid="${s.id}" data-cid="${cid}">
                    <td class="p-3 text-slate-500 border-r border-slate-100">${idx+1}</td>
                    <td class="p-3 font-medium text-slate-800 border-r border-slate-100">${s.name}</td>
                    ${[0,1,2,3].map(i => `
                        <td class="p-2 text-center border-r border-slate-100">
                            <input type="number" min="0" max="20" value="${record.grades[i]}" 
                            class="w-12 text-center border border-slate-300 rounded focus:ring-2 focus:ring-amber-500 outline-none grade-inp"
                            oninput="calcRow(this)">
                        </td>
                    `).join('')}
                    <td class="p-3 text-center bg-slate-50 final-cell ${finalClass}">${record.final}</td>
                </tr>
            `;
        });
    });

    document.getElementById('load-att-btn').addEventListener('click', () => {
        const gid = document.getElementById('att-grade-select').value;
        const date = document.getElementById('att-date').value;
        if(!gid || !date) { alert('Datos incompletos'); return; }

        const existing = db.attendance.find(a => a.date === date && a.gradeId === gid);
        const recordMap = existing ? existing.records : {};

        const students = db.students.filter(s => s.gradeId === gid);
        const tbody = document.getElementById('att-table-body');
        document.getElementById('att-container').classList.remove('hidden');
        tbody.innerHTML = '';

        students.forEach(s => {
            const status = recordMap[s.id] || 'P'; 
            tbody.innerHTML += `
                <tr class="border-b border-slate-100" data-sid="${s.id}">
                    <td class="p-3 font-medium text-slate-800">${s.name}</td>
                    <td class="p-3 text-center"><input type="radio" name="att_${s.id}" value="P" ${status==='P'?'checked':''} class="accent-emerald-600 scale-125"></td>
                    <td class="p-3 text-center"><input type="radio" name="att_${s.id}" value="T" ${status==='T'?'checked':''} class="accent-amber-500 scale-125"></td>
                    <td class="p-3 text-center"><input type="radio" name="att_${s.id}" value="F" ${status==='F'?'checked':''} class="accent-red-600 scale-125"></td>
                </tr>
            `;
        });
    });

    document.getElementById('form-event').addEventListener('submit', (e) => {
        e.preventDefault();
        db.events.push({
            title: document.getElementById('new-evt-title').value,
            date: document.getElementById('new-evt-date').value,
            type: document.getElementById('new-evt-type').value
        });
        saveDB();
        renderCalendar();
        closeModal('add-event-modal');
        showToast('Evento agendado');
        e.target.reset();
    });

    function populateSelects() {
        const fill = (id) => {
            const el = document.getElementById(id);
            if(!el) return;
            el.innerHTML = '<option value="">Seleccione...</option>';
            gradesList.forEach(g => el.innerHTML += `<option value="${g.id}">${g.name}</option>`);
        };
        ['new-stu-grade', 'new-cour-grade', 'grade-select-grade', 'att-grade-select', 'course-filter-grade'].forEach(fill);
        document.getElementById('course-filter-grade').innerHTML = '<option value="all">Todos los Grados</option>' + document.getElementById('course-filter-grade').innerHTML;

        const tSel = document.getElementById('new-cour-teacher');
        tSel.innerHTML = '<option value="">Asignar Docente</option>';
        db.teachers.forEach(t => tSel.innerHTML += `<option value="${t.id}">${t.name}</option>`);
    }
});
</script>
</body>
</html>
