                            <div class="bg-white p-2 text-center font-bold text-slate-700">Sáb</div>
                            <!-- Days Container -->
                        </div>
                        <div id="cal-days" class="grid grid-cols-7 gap-px bg-slate-200 border-l border-r border-b border-slate-200"></div>
                    </div>
                </section>

            </main>
